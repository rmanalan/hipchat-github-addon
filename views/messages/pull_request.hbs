{
  "style": "application",
  "url": "{{pull_request.url}}",
  "id": "{{number}}",
  "title": "{{repository.full_name}}",
  "description": "{{summarize pull_request.body}}",
  "original_html": "<a href=\"{{pull_request.user.html_url}}\">{{pull_request.user.login}}</a> {{action}} pull request #<a href=\"{{pull_request.html_url}}\">{{number}}</a> on <a href=\"{{repository.html_url}}\">{{repository.full_name}}</a>: <a href=\"{{pull_request.html_url}}\"><b>{{pull_request.title}}</b></a>\\n{{#if pull_request.body}}<pre>{{summarize pull_request.body}}</pre>{{/if}}",
  "icon": {
    "url": "{{localBaseUrl}}/images/GitHub-Mark-64px.png",
    "url@2x": "{{localBaseUrl}}/images/GitHub-Mark-120px.png"
  },
  "activity": {
    "icon": "{{sender.avatar_url}}",
    "html": "<a href=\"{{pull_request.user.html_url}}\"><strong>{{pull_request.user.login}}</strong></a> {{action}} pull request <strong>#<a href=\"{{pull_request.html_url}}\">{{number}}</a></strong> on <a href=\"{{repository.html_url}}\"><strong>{{repository.full_name}}</strong></a>: <a href=\"{{pull_request.html_url}}\"><b>{{pull_request.title}}</b></a>"
  },
  "metadata": {
    "repository_id": "{{repository.id}}",
    "url": "{{pull_request.url}}"
  }
}