{
  "development": {
    "usePublicKey": false,
    "watch": false,
    "port": 3000,
    "maxTokenAge": 999999999,
    "store": {
      "adapter": "redis",
      "url": "redis://localhost:6379"
    }
  },
  "staging": {
    "usePublicKey": false,
    "port": "$PORT",
    "localBaseUrl": "https://hipchat-github-staging.herokuapp.com",
    "store": {
      "adapter": "redis",
      "url": "$DATABASE_URL"
    },
    "whitelist": [
      "*.hipchat.com"
    ]
  },
  "production": {
    "usePublicKey": false,
    "port": "$PORT",
    "localBaseUrl": "https://github.hipch.at",
    "store": {
      "adapter": "redis",
      "url": "$DATABASE_URL"
    },
    "whitelist": [
      "*.hipchat.com"
    ]
  }
}
